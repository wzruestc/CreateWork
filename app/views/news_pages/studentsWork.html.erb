<script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.0.js"></script>
  <script type="text/javaScript">
      $(document).ready(function(){
          $("#clickAndFadeOut1").click(function(){
              $("#coverImg").fadeOut(1000,function(){
                  $("#studentsMessage").fadeIn(1000);
              });
          });
      });
      $(document).ready(function(){
          $("#clickAndFadeOut2").click(function(){
              if($("#coverImg").css("display")=="block"){
                  $("#coverImg").fadeOut(1000,function(){
                      $("#uploadFiles").fadeIn(1000);
                  });
              }
              else{
                  $("form").each().fadeOut(1000,function(){
                      $("#uploadFiles").fadeIn(1000);
                  });
              }
          });
      });
  </script>
</head>
