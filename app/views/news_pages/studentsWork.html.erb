          <option>匡鹏举</option>
          <option>刘雨萌</option>
          <option>马明达</option>
          <option>吴霞</option>
          <option>李波</option>
          <option>桂阳</option>
          <option>何翔</option>
          <option>王萍萍</option>
        </select>
        <br></br>
        <input type="file" class="buttonofStudentsWork"></input>
        <br></br>
        <textarea class="textAreaofStudents" placeholder="input your message">
        </textarea>
        <br></br>
        <button type="submit" class="buttonofStudentsWork">确认</button>
      </form>
    </div>
